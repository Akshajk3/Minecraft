{
  "configurations": [
    {
      "name": "windows-mingw-g++",
      "includePath": [
        "${workspaceFolder}/**",
        "${workspaceFolder}/Dependencies"
      ],
      "compilerPath": "C:/MinGW/bin/g++.exe", // Adjust the path to your MinGW installation
      "cStandard": "c11",
      "cppStandard": "c++11",
      "intelliSenseMode": "windows-clang-x64",
      "compilerArgs": [
        "-I${workspaceFolder}/Dependencies",
        "-I${workspaceFolder}/Dependencies/glad/include",
        "-std=c++11" // Add this line to enable C++11 support
      ]
    }
  ],
  "version": 4
}